@model IEnumerable<TaskFlowProject.Models.TaskItemModel>

@{
    ViewData["Tite"] = "Task List";
}

<h2 class="mb-3">All Tasks</h2>

<a class="btn btn-success mb-3" asp-action="Create">+ New Task</a>

<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Title</th>
            <th>Assigned To</th>
            <th>Priority</th>
            <th>Status</th>
            <th>Due Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.AssignedTo</td>
                <td>@task.Priority</td>
                <td>@task.Status</td>
                <td>@(task.DueDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@task.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>